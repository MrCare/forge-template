# Auto detect text files and perform LF normalization
* text=auto

# Solidity files
*.sol text eol=lf

# JavaScript/TypeScript files
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf

# Web files
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sass text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configuration files
*.toml text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.xml text eol=lf

# Shell scripts
*.sh text eol=lf

# Exclude files from exporting
.gitattributes export-ignore
.gitignore export-ignore
.eslintcache export-ignore

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.webp binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
